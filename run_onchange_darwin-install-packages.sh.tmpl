{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Install Homebrew packages for macOS
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

{{ else if eq .chezmoi.os "linux" -}}
#!/bin/bash

{{ if eq .chezmoi.osRelease.id "ubuntu" -}}
# Update and install APT packages for Ubuntu
sudo apt-get update
sudo apt-get install -y {{ range .packages.ubuntu.apt }}{{ . | quote }} {{ end }}
for pkg in {{ range .packages.ubuntu.snap }}{{ . | quote }} {{ end }}; do sudo snap install "$pkg"; done
for pkg in {{ range .packages.ubuntu.snapclassic }}{{ . | quote }} {{ end }}; do sudo snap install --classic "$pkg"; done
{{ end -}}

{{ end -}}